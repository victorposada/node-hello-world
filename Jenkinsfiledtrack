pipeline {
    agent {
        kubernetes {
            label 'dtrack'
            defaultContainer 'dtrack'
        }
    }
    environment {
        GH_TOKEN    = credentials('github-token')
        REGISTRY    = 'ghcr.io'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    sh 'git config --global --add safe.directory "/home/jenkins/agent/workspace/node-hello-world_main"'
                }
            }
        }
        stage('Analysis') {
            steps {
                script {
                    sh 'yarn add --dev @cyclonedx/yarn-plugin-cyclonedx'
                    sh 'yarn exec cyclonedx-yarn -o bom.json'
                    sh 'cat bom.json'
                }
            }
        }
    }
}
